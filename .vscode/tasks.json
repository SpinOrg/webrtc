{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure:release",
            "type": "shell",
            "command": "cmake -S. -Bbuild -DCMAKE_INSTALL_PREFIX=build -DCMAKE_BUILD_TYPE=Release",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "label": "configure:debug",
            "type": "shell",
            "command": "cmake -S. -Bbuild -DCMAKE_INSTALL_PREFIX=build -DCMAKE_BUILD_TYPE=Debug",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build ./build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "label": "pack",
            "type": "shell",
            "command": "cmake --build ./build --target pack",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cmake --build ./build --target clean",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        }
    ]
}
